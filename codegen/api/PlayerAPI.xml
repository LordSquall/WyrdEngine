<?xml version="1.0" encoding="utf-8" ?>
<PlayerAPI>
  <File name="Core">
    
    <Block name="Config">
      <Item name="name" type="String" />
      <Item name="version" type="String" />
    </Block>
    
  </File>

  <File name="Game">
    
    <Block name="Config">
      <Item name="version" type="String" />
      <Item name="name" type="String" />
    </Block>
    
    <Block name="Display">
      <Item name="width" type="UInt32" />
      <Item name="height" type="UInt32" />
    </Block>
    
    <Block name="SceneListings">
      <ItemList name="sceneUIDs" type="UID" />
      <Item name="initialScene" type="UID" />
    </Block>
    
  </File>

  <File name="Bundle">
    
    <Block name="Config">
      <Item name="version" type="String" />
    </Block>


    <Block name="Shader">
      <Item name="uid" type="UID" />
      <Item name="vertexSrc" type="String" />
      <Item name="fragmentSrc" type="String" />
    </Block>
    
    <Block name="ShaderConfig">
      <ItemList name="shaders" type="Shader" />
    </Block>

    <Block name="Texture">
      <Item name="uid" type="UID" />
      <Item name="width" type="UInt32" />
      <Item name="height" type="UInt32" />
      <Item name="channels" type="UInt32" />
      <ItemList name="data" type="Byte" />
    </Block>
    
    <Block name="TextureConfig">
      <ItemList name="textures" type="Texture" />
    </Block>
  </File>

  <File name="Scene">
    
    <Block name="Config">
      <Item name="version" type="String" />
      <Item name="name" type="String" />
      <Item name="camera" type="UID" />
    </Block>

    <Block name="Transform2DComponent">
      <Item name="x" type="Float" />
      <Item name="y" type="Float" />
      <Item name="angle" type="Float" />
      <Item name="scaleX" type="Float" />
      <Item name="scaleY" type="Float" />
    </Block>
	
	 <Block name="Transform3DComponent">
      <Item name="x" type="Float" />
      <Item name="y" type="Float" />
      <Item name="z" type="Float" />
      <Item name="angleX" type="Float" />
      <Item name="angleY" type="Float" />
      <Item name="angleZ" type="Float" />
      <Item name="scaleX" type="Float" />
      <Item name="scaleY" type="Float" />
      <Item name="scaleZ" type="Float" />
    </Block>
	
    <Block name="SpriteComponent">
      <Item name="x" type="Float" />
      <Item name="y" type="Float" />
      <Item name="width" type="Float" />
      <Item name="height" type="Float" />
      <Item name="texture" type="UID" />
    </Block>

    <Block name="CameraComponent">
      <Item name="uid" type="UID" />
      <Item name="size" type="Float" />
      <Item name="width" type="Float" />
      <Item name="height" type="Float" />
    </Block>
    
    <Block name="Component">
      <Item name="type" type="Int32" />
      <ConditionalItemList control="type" type="ComponentDef" name="componentDef">
        <ConditionalItem value="3" name="sprite" type="SpriteComponent" />
        <ConditionalItem value="6" name="camera" type="CameraComponent" />
      </ConditionalItemList>
    </Block>
    
    <Block name="GameObject">
      <Item name="name" type="String" />
      <Item name="uid" type="UID" />
      <Item name="transformType" type="Int32" />
	  <ConditionalItemList control="transformType" type="TransformDef" name="transformDef">
        <ConditionalItem value="1" name="transform2D" type="Transform2DComponent" />
        <ConditionalItem value="2" name="transform3D" type="Transform3DComponent" />
      </ConditionalItemList>
      <ItemList name="components" type="Component" />
    </Block>
    
    <Block name="Layer">
      <Item name="name" type="String" />
      <ItemList name="gameObjects" type="GameObject" />
    </Block>

    <Block name="LayerConfig">
      <ItemList name="layers" type="Layer" />
    </Block>
  </File>
  
</PlayerAPI>